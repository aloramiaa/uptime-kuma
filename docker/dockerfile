# ---- Build Stage ----
FROM node:18-alpine AS build

WORKDIR /app

# Install system deps
RUN apk add --no-cache \
  git \
  python3 \
  make \
  g++ \
  bash \
  tzdata \
  sqlite

# Copy package files first (for caching)
COPY package*.json ./

# Install ALL deps (including dev) for build
RUN npm install --legacy-peer-deps

# Copy rest of source
COPY . .

# Build frontend
RUN npm run build

# ---- Runtime Stage ----
FROM node:18-alpine

WORKDIR /app

RUN apk add --no-cache tzdata sqlite bash

# Copy only built files + required runtime packages
COPY --from=build /app /app

EXPOSE 3001

CMD ["node", "server/server.js"]
